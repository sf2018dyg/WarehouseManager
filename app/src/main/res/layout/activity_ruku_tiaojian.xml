<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_16"
    android:background="@drawable/alert_bg_w"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txthead"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_5"
        android:text="入库条件"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/llfrukudan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="visible">

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="入库单"
            android:textColor="@color/half_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_selectRukuDanju"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/arrow_right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text"
            android:hint="请选择入库单"
            android:textColorHint="@color/dark"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <View
        android:id="@+id/viewllfrukudanju"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/llfdanju"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="单据"
            android:textColor="@color/half_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_selectDanju"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:drawableRight="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="请选择单据"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textColorHint="@color/dark"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/viewllfchuwei"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/llfchuwei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="45dp"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:text="储位"
                android:textColor="@color/text_prompt"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/chuweistar"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:text="*"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_selectChuwei"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="8dp"
                android:drawableRight="@mipmap/arrow_right"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:hint="请选择储位"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#333333"
                android:textColorHint="@color/dark"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
        <View
            android:id="@+id/viewchuwei"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.6"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="部门"
            android:textColor="@color/text_prompt"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/txtdeptstar"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_selectBumen"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="请选择部门"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#333333"
            android:textColorHint="@color/dark"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/viewbm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/llfyuanyin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="原因"
            android:textColor="@color/text_prompt"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_selectYuanyin"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:drawableRight="@mipmap/arrow_right"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="请选择原因"
            android:textColor="#333333"
            android:textColorHint="@color/dark"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:id="@+id/viewreson"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.6"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/llfremark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:layout_width="45dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="备注"
            android:textColor="@color/text_prompt"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edt_remark"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:hint="请输入备注信息"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:textColor="#333333"
            android:textColorHint="@color/dark"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/txt_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:text="确定"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_15" />
</LinearLayout>